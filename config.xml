<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.intercamp.postofacilmobile" version="3.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Posto Fácil Mobile</name>
    <description>
        Aplicativo mobile Posto Facil para visualização de indicadores e outras funcionalidades dos produtos 
    </description>
    <author email="anderson.gusicuma@linx.com.br" href="http://www.linx.com.br/">
        Linx Sistemas
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://cursosbraga.com.br" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <engine name="android" spec="~6.3.0" />
</widget>
